@model DepartmentProject.Entities.Concrete.Employee
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<br/>
<form class="form-group" method="post">
    @Html.LabelFor(p=>p.Name,"Adı")
    @Html.TextBoxFor(p=>p.Name,new {@class="form-control"} )
    <br/>
    @Html.LabelFor(p=>p.Surname,"Soyadı")
    @Html.TextBoxFor(p=>p.Surname,new {@class="form-control"} )
    <br/>
    @Html.LabelFor(p=>p.City,"Şehir")
    @Html.TextBoxFor(p=>p.City,new {@class="form-control"} )
    <br/>
    @Html.LabelFor(p=>p.DepartmentId,"Departman Adı")
    @Html.DropDownListFor(p=>p.Department.DepartmentId,(List<SelectListItem>)ViewBag.listOfDepartments, new {@class="form-control"})
    <br/>

    <button class="btn btn-info">Ekle</button>
</form>
